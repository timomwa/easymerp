<h1>Products</h1>
<% permitted_to? :manage, :products do %>
<%= link_to 'New Product', new_product_url %>
<% end %>
<% @products = Product.paginate(:page => params[:page], :per_page => 5) %>
<table class="table table-hover">
  <tr>
    <th>SKU</th>
    <th>Name</th>
    <th>Stock Qty</th>
    <% permitted_to? :manage, :products do %>
    	<th></th>
    <% end %>
  </tr>
 
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.sku %></td>
      <td><%= product.name %></td>
      <td><%= product.count %></td>
      <% permitted_to? :manage, :products do %>
      	<td><%= link_to 'Edit', product_url(:id => product.id, :page => params[:page]), method: :get %></td>
      <% end %>
  
    </tr>
  <% end %>
</table>

<p>
<%= will_paginate(@products, :previous_label => "&laquo;", :next_label => "&raquo;", :class=>"small-font", :outer_window => 1, :inner_window => 0, :class=>"small-font", :outer_window => 1, :inner_window => 0) %>
<%= page_entries_info @products %>
</p>