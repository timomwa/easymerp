<!DOCTYPE html>
<html lang="en">
<head>
  <title>Honda Owners Kenya Member Portal</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
 
<nav class="navbar navbar-inverse hoctransparent">
  <div class="container">
    
    <div class="navbar-header">
    	<%= link_to image_tag('hoc_transparent.png', height: '60'), root_path %>
    </div>
    
    <div id="navbar">
      <ul class="nav navbar-nav" role="menu" aria-labelledby="dropdownMenu">
        
         <% if current_user %>
         	<li class="active"></li>
        	<% permitted_to? :manage, :products do %>
        	    <li class="dropdown">
        			<a class="dropdown-toggle" data-toggle="dropdown" href="#">
        				Admin<span class="caret"></span>
        			</a>
        			<ul class="dropdown-menu">
          				<li><%= link_to 'Users & Roles', admin_url %></li>
          				<li><%= link_to 'Products', products_url %></li>
          				<li><%= link_to 'Inventories',inventories_path %></li>
          				<li><%= link_to 'Accounting', accountingpanel_url %></li>
        			</ul>
      			</li>
      			<li><%= link_to 'Sales', root_path %></li>
        	<% end%>
        	
        <% end %>
        
        <li><%= link_to 'Gallery', gallery_url %></li>
        <li><%= link_to 'HOC Calendar', root_path %></li>
        <li><%= link_to 'Honda Spares & Accessories', root_path %></li>
        <li><%= link_to 'Honda Car Market', root_path %></li>
      </ul>

      
      <ul class="nav navbar-nav pull-right">
        <% if current_user %>
          <li><span><%= current_user.email %></span></li>
          <li><%= link_to 'Sign Out', sign_out_path, method: :delete %></li>
          <li><%= link_to 'My Account', root_path %></li>
        <% else %>
          <li><%= link_to 'Sign In', sign_in_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="panel panel-default hoctransparent hocnoborder">