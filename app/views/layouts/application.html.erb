<!DOCTYPE html>
<html>
<head>
  <title>Easy M-erp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    
    <div class="navbar-header">
      <%= link_to 'Easy M-erp', root_path, class: 'navbar-brand' %>
    </div>
    
    <div id="navbar">
      <ul class="nav navbar-nav" role="menu" aria-labelledby="dropdownMenu">
        <li><%= link_to 'Home', root_path %></li>
        <% if current_user %>
        	<li><%= link_to 'Administration' %></li>
        	<li><%= link_to 'Products', products_url %></li>
        	<li><%= link_to 'Sales', root_path %></li>
        	<li><%= link_to 'Imports', root_path %></li>
        <% end %>
      </ul>

      
      <ul class="nav navbar-nav pull-right">
        <% if current_user %>
          <li><span><%= current_user.email %></span></li>
          <li><%= link_to 'Sign Out', sign_out_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign In', sign_in_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>


<%= yield %>

<div id="footer" class="footerbar">
footer
</div>

</body>
</html>